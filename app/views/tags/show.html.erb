<div class="readonly-data">
  <h2><%= @tag %></h2>

  <p>
    <strong><%= Tag.human_attribute_name 'name' %></strong>:
    <%= @tag.name %>
  </p>
  <p>
    <strong><%= Tag.human_attribute_name 'category' %></strong>:
    <%= @tag.category %>
  </p>
</div>
<div class="form-actions">
  <%= link_to t('label.edit'), edit_tag_path(@tag) if can? :update, @tag %> |
  <%= link_to t('label.list'), tags_path %>
</div>
