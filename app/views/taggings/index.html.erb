<% if @taggings.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <div class="row">
    <div class="span12">
      <table class="table resource-list">
        <thead>
          <tr>
            <th><%= Tagging.human_attribute_name 'tag' %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @taggings.each do |tagging| %>
            <tr>
              <td><%= tagging.tag %></td>
              <td><%= link_to_show tagging %></td>
              <td><%= link_to_edit edit_tagging_path(tagging) if can? :update, tagging %></td>
              <td><%= link_to_destroy tagging if can? :destroy, tagging %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= pagination_links(@taggings) %>
<% end %>

<div class="form-actions">
  <%= link_to(
    t('view.taggings.new', default: :'label.new'),
    new_tagging_path, class: 'btn btn-primary'
  ) if can? :create, Tagging %>
</div>
