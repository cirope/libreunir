<div class="row">
  <div class="span12">
    <h3>
      <%= t("view.dashboard.#{action_name}") %>
    </h3>
    <table id="expired" class="table resource-list expired table-condensed" <%= @printing.present? ? "" : 'data-endless-container="true"' %>>
      <thead>
        <th>
          <%= t 'view.dashboard.product_id' %>
        </th>
        <th>
          <%= t 'view.dashboard.client' %>
        </th>
        <th>
          <%= t 'view.dashboard.expiring' %>
        </th>
        <th>
          <%= t 'view.dashboard.amount' %>
        </th>
        <th>
          <%= t 'view.dashboard.phone' %>
        </th>
        <th>
          <%= t 'view.dashboard.address' %>
        </th>
      </thead>
      <tbody>
        <% @fees.each do |fee| %>
          <tr>
            <td>
              <%= fee.client.try(:product_id) %>
            </td>
            <td>
              <%= link_to fee.client.try(:name), profile_path(fee.client.try(:product_id)) %>
            </td>
            <td>
              <%= I18n.l(fee.expiration_date, format: :minimal) %>
            </td>
            <td>
              <%= fee.total_amount %>
            </td>
            <td>
              <%= fee.client.try(:phones).try(:first).try(:phone) %>
            </td>
            <td>
              <%= fee.client.try(:addresses).try(:first).try(:address) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="counter-increment">
  </div>
  <div class="not-printable">
    <%= pagination_links(@fees) if @printing.blank? %>
  </div>
</div>

<nav class="form-actions">
</nav>
