<%= render 'shared/filters' %>

<div class="readonly-data">
  <div class="row-fluid">
    <div class="span12">
      <h3>
        <%= t("view.dashboard.#{action_name}") %>
      </h3>
      <table id="expired" class="table resource-list expired table-condensed" <%= @print ? '' : 'data-endless-container="true"' %>>
        <thead>
          <tr>
            <th>
              <%= t 'view.dashboard.product_id' %>
            </th>
            <th>
              <%= t 'view.dashboard.client' %>
            </th>
            <th>
              <%= t 'view.dashboard.expiring' %>
            </th>
            <th>
              <%= t 'view.dashboard.amount' %>
            </th>
            <th>
              <%= t 'view.dashboard.phone' %>
            </th>
            <th>
              <%= t 'view.dashboard.address' %>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @fees.each do |fee| %>
            <%= render 'fees/fee', fee: fee %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="not-printable">
  <%= pagination_links(@fees) unless @print %>
</div>

<nav class="form-actions">
</nav>
