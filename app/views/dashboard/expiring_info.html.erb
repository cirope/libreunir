<table class="table table-condensed">
  <thead>
    <th>
      <%= t 'view.dashboard.late_average' %>
    </th>
    <th>
      <%= t 'view.dashboard.amount' %>
    </th>
    <th>
      <%= t 'view.dashboard.phone' %>
    </th>
    <th>
      <%= t 'view.dashboard.address' %>
    </th>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= t("view.dashboard.#{@fee.late_average[:formal]}", days: @fee.late_average[:days].to_i, count: @fee.late_average[:days].to_i) %>
      </td>
      <td>
        <%= @fee.try(:total_amount) %>
      </td>
      <td>
        <%= @fee.client.try(:phones).try(:first).try(:phone) %>
      </td>
      <td>
        <%= @fee.client.try(:addresses).try(:first).try(:address) %>
      </td>
    </tr>
  </tbody>
</table>

<h5>
<%= t 'view.dashboard.last_calls' %>
</h5>
<table class="table table-condensed">
  <thead>
    <th>
      <%= t 'view.dashboard.call' %>
    </th>
  </thead>
  <tbody>
    <% @fee.client.calls.each do |call| %>
      <tr>
        <td>
          <%= call.try(:call) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
