<%= render 'sidebar' %>
<%= render 'topbar' %>

<% if @loans.present? %>
  <%= form_tag tag_taggings_path('tag_id'), 
    method: :post, data: { remote: true, form_container: true } do %>
    <table class="table table-condensed table-hover" data-endless-container="true">
      <thead>
        <tr>
          <th></th>
          <th><%= Loan.human_attribute_name('client_id') %></th>
          <th><%= Loan.human_attribute_name('total_debt') %></th>
          <th><%= Payment.human_attribute_name('expired_at') %></th>
          <th><%= Phone.human_attribute_name('phone') %></th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <%= render partial: 'expired', collection: @loans, as: :loan %>
      </tbody>
    </table>
  <% end %>

  <div data-schedule-form-placeholder="true"></div>

  <div class="pagination-container">
    <%= pagination_links(@loans) %>
  </div>
<% else %>
  <%= render 'shared/empty_index' %>
<% end %>
