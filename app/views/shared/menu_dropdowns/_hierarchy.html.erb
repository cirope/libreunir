<% parent = selected_user.parent %>
<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <span><%= selected_user.name %></span>
    <b class="caret"></b>
  </a>
  <ul class="dropdown-menu">
    <% if parent && parent.has_ancestor?(current_user) %>
      <li><%= link_to parent.name, switch_path(parent) %></li>
      <% if selected_user.has_children? %>
        <li class="divider"></li>
      <% end %>
    <% end %>
    <% selected_user.children.each do |child| %>
      <li><%= link_to child.name, switch_path(child) %></li>
    <% end %>
  </ul>
</li>
