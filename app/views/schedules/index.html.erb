<div class="row-fluid">
  <div class="span12">
    <div class="btn-group">
      <% @schedules.count_by_days.sort.each do |date, count| %>
        <%= link_to_filter_schedules_by_date(date, count) %>
      <% end %>
    </div>

    <% if @schedules.empty? %>
      <%= render 'empty_index' %>
    <% else %>
      <hr />

      <ul>
        <%= render @filter_schedules %>
      </ul>

      <p>
        <%= link_to(
          t('view.schedules.new', default: :'label.new'),
          new_schedule_path, class: 'btn btn-primary', data: { remote: true }
        ) if can? :create, Schedule %>
      </p>
      <div data-schedule-place-holder></div>
    <% end %>
  </div>
</div>
