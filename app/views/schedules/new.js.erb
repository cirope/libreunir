<% if @schedulable %>
  $('.pagination-container').remove();
  $('[data-object-id="<%= @schedulable.to_param %>"]').siblings('tr').hide();
  $('[data-schedule-form-placeholder]').replaceWith('<%= j render 'schedulable' %>');
  $('#schedule_description').focus();
<% else %>
  $('[data-schedule-modal]').html(
    '<%= j render(template: 'schedules/schedule_modal',
      locals: {
        header: t('view.schedules.new'),
        body: render('form', formats: [:html]),
        cancel: false
      }
    ) %>'
  );
<% end %>
<%= render 'datepicker_setup' %>
