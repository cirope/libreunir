<div class="alert alert-info">
  <% if controller_name == 'clients' %>
    <button type="button" class="close" data-remove-target="#client-info-<%= client.to_param %>">&times;</button>
  <% end %>

  <h4><%= client %></h4>

  <dl class="dl-horizontal">
    <dt><%= Client.human_attribute_name('name') %></dt>
    <dd><%= client.name %></dd>
    <dt><%= Client.human_attribute_name('lastname') %></dt>
    <dd><%= client.lastname %></dd>
    <dt><%= Client.human_attribute_name('identification') %></dt>
    <dd><%= client.identification %></dd>
    <dt><%= Client.human_attribute_name('phone') %></dt>
    <dd><%= client.phone.present? ? client.phone : '-' %></dd>
    <dt><%= Client.human_attribute_name('address') %></dt>
    <dd><%= client.address.present? ? client.address : '-' %></dd>
  </dl>

  <% if client.last_comments.present? %>
    <h5><%= Client.human_attribute_name('last_comments') %></h5>
    <ul>
      <% client.last_comments.each do |comment| %>
        <li>
          [<%= l(comment.created_at.to_date) %>]
          <%= comment.user %>: <%= comment.comment %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
