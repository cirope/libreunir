<% render_options = { partial: 'schedulable', collection: @clients, as: :client } %>
<% if params[:page].blank? %>
  $('table[data-endless-container] > tbody').html('<%= j render(render_options) %>');
  $(document).scroll();
<% else %>
  $('table[data-endless-container] > tbody').append('<%= j render(render_options) %>');
<% end %>

<% if @clients.next_page %>
  $('.pagination-container').replaceWith('<%= j pagination_links(@clients) %>');
  $(document).scroll();
<% else %>
  $('.pagination-container').hide();
<% end %>
